<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:text="YourFilms" />

    <TextView
        android:id="@+id/TitreTendances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Un projet"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitreTendances"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="L'application 'YourFilms' a été créée dans le cadre des études d'ingénierie numérique à l'EPF Cachan de Guillaume BODARD, et ainsi de l'évaluation du module 'Matériel Mobile'."
    />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Des données Open-Source"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="L'ensemble des données proviennent de la base de donnée TMBd. N'importe quelle personne peut utiliser TMBd et son API afin de récupérer des informations concernant des films ou séries."
        />

</RelativeLayout>

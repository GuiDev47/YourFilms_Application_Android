<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <ImageView
        android:id="@+id/trendingMovieImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/affiche" />


    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trendingMovieImage"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/search"
        android:textSize="24sp"
        android:hint="Rechercher un film" />



    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="Rechercher" />

    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Tendances"
        />

    <TextView
        android:id="@+id/Film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Titre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="film"
        />


    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp">


        <ImageView
            android:id="@+id/QR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qrcode"
            android:padding="16dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:padding="16dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/favoritesIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/coeurvide"
            android:padding="16dp"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>

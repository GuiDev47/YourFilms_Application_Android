<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"
        android:text="YourFilms" />

    <TextView
        android:id="@+id/TitreTendances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Populaires"
        />

    <FrameLayout
        android:id="@+id/fragment_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitreTendances" />

    <TextView
        android:id="@+id/TitreFavoris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_recycler"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="24dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Favoris"
        />

    <FrameLayout
        android:id="@+id/fragment_recycler_fav"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/TitreFavoris" />

</RelativeLayout>

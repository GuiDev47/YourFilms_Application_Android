<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourFilmsVF" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Fond noir de l'ActionBar -->
        <item name="colorPrimary">#000000</item>


        <item name="colorPrimaryVariant">#FF0000</item> <!-- Bordure rouge de l'ActionBar -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Barre supÃ©rieur -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- ActionBar customization. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:divider">?attr/colorPrimaryVariant</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>

    <style name="CustomActionBarTitleText">
        <item name="android:textColor">@color/white</item> <!-- Couleur du texte du titre de l'ActionBar -->
        <item name="android:textSize">16sp</item> <!-- Taille du texte du titre de l'ActionBar -->
    </style>
</resources>
